<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.popland.pop.sql_notebook.Activity2"
    tools:showIn="@layout/activity_2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tao Database"
        android:id="@+id/BTNtaoDB"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Huy Database"
        android:id="@+id/BTNhuyDB"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tao bangLOP"
        android:id="@+id/BTNtaobangL"
        android:layout_below="@+id/BTNtaoDB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tao BangSV"
        android:id="@+id/BTNtaobangSV"
        android:layout_alignTop="@+id/BTNtaobangL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Them"
        android:id="@+id/BTNthemL"
        android:layout_below="@+id/BTNtaobangL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Them"
        android:id="@+id/BTNthemS"
        android:layout_alignTop="@+id/BTNthemL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xoa"
        android:id="@+id/BTNxoaL"
        android:layout_below="@+id/BTNthemL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xoa"
        android:id="@+id/BTNxoaS"
        android:layout_below="@+id/BTNthemS"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cap Nhat"
        android:id="@+id/BTNcapnhatL"
        android:layout_below="@+id/BTNxoaL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cap Nhat"
        android:id="@+id/BTNcapnhatS"
        android:layout_alignTop="@+id/BTNcapnhatL"
        android:layout_alignLeft="@+id/BTNxoaS"
        android:layout_alignStart="@+id/BTNxoaS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem"
        android:id="@+id/BTNxem"
        android:layout_below="@+id/BTNcapnhatL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EDTxem"
        android:layout_below="@+id/BTNcapnhatS"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/BTNcapnhatL"
        android:layout_toEndOf="@+id/BTNcapnhatL" />
</RelativeLayout>
